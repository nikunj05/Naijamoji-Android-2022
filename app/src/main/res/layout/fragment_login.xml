<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@android:color/white">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp">

            <com.naijamojiapp.app.customview.CustomFontTextView
                android:id="@id/tv_title"
                style="@style/gray_12_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/already_registered" />

            <LinearLayout
                android:id="@+id/linear_main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tv_title"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:orientation="horizontal"
                android:weightSum="2">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/login_bg_white"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivGoogle"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/google_new" />

                    <com.naijamojiapp.app.customview.CustomFontTextView
                        android:id="@+id/tv_login_google"
                        style="@style/white_14_m"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/ivGoogle"
                        android:gravity="center"
                        android:text="@string/google"
                        android:textColor="@color/light_black" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/login_bg_white"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivFacebook"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/fb_new" />

                    <com.naijamojiapp.app.customview.CustomFontTextView
                        android:id="@+id/tv_login_fb"
                        style="@style/white_14_m"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_toRightOf="@+id/ivFacebook"
                        android:gravity="center"
                        android:text="@string/facebook"
                        android:textColor="@color/light_black" />
                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear_login_normal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/linear_main"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:orientation="horizontal">


                <com.naijamojiapp.app.customview.CustomFontTextView
                    android:id="@+id/tv_login_with_email"
                    style="@style/white_14_m"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_gradiant_bg"
                    android:gravity="center"
                    android:text="@string/email"
                    android:textAllCaps="true" />

            </LinearLayout>


        </RelativeLayout>
</RelativeLayout>
